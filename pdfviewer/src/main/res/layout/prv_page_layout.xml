<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/prv_pageMarginStart"
    android:layout_marginTop="@dimen/prv_pageMarginTop"
    android:layout_marginEnd="@dimen/prv_pageMarginEnd"
    android:layout_marginBottom="@dimen/prv_pageMarginBottom"
    app:cardCornerRadius="@dimen/prv_cardCornerRadius"
    app:cardElevation="@dimen/prv_cardElevation"
    tools:layout_height="100dp">

    <ImageView
        android:id="@+id/prv_page_img"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ProgressBar
        android:id="@+id/prv_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</com.google.android.material.card.MaterialCardView>
